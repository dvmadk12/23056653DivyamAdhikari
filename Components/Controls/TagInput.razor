@using JUpdate.Services
@inject JournalService JournalService

<div class="tag-input-container">
    <div class="tags-list">
        @foreach (var tag in Tags)
        {
            <span class="tag-chip">
                #@tag
                <button class="remove-tag" @onclick="() => RemoveTag(tag)" tabindex="-1">Ã—</button>
            </span>
        }
        <input type="text" 
               class="tag-input" 
               placeholder="@(Tags.Count == 0 ? "Add tags..." : "")"
               @bind="currentInput"
               @bind:event="oninput"
               @onkeypress="HandleKeyPress"
               @onfocusout="AddCurrentInput" />
    </div>
    
    @if (showSuggestions && suggestions.Any())
    {
        <div class="suggestions-dropdown">
            @foreach (var suggestion in suggestions)
            {
                <div class="suggestion-item" @onclick="() => SelectSuggestion(suggestion)">
                    #@suggestion
                </div>
            }
        </div>
    }
</div>

@code {
    [Parameter] public List<string> Tags { get; set; } = new();
    [Parameter] public EventCallback<List<string>> TagsChanged { get; set; }

    private string currentInput = "";
    private List<string> allTags = new();
    private List<string> suggestions = new();
    private bool showSuggestions = false;

    protected override void OnInitialized()
    {
        // Load existing tags for autocomplete
        try 
        {
            allTags = JournalService.GetAllTags();
        }
        catch { /* Handle loading error gracefully */ }
    }

    private void HandleKeyPress(KeyboardEventArgs e)
    {
        if (e.Key == "Enter" || e.Key == ",")
        {
            AddCurrentInput();
        }
    }

    private void AddCurrentInput()
    {
        if (string.IsNullOrWhiteSpace(currentInput)) return;

        var cleanTag = currentInput.Trim().Trim(',').Trim();
        if (!string.IsNullOrEmpty(cleanTag) && !Tags.Contains(cleanTag, StringComparer.OrdinalIgnoreCase))
        {
            Tags.Add(cleanTag);
            TagsChanged.InvokeAsync(Tags);
        }

        currentInput = "";
        showSuggestions = false;
    }

    private void RemoveTag(string tag)
    {
        Tags.Remove(tag);
        TagsChanged.InvokeAsync(Tags);
    }

    private void SelectSuggestion(string suggestion)
    {
        currentInput = suggestion;
        AddCurrentInput();
    }
}

