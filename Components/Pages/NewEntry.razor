@page "/new-entry"
@page "/edit-entry/{Id:int}"
@using JUpdate.Models
@using JUpdate.Services
@using JUpdate.Components.Controls
@inject JournalService JournalService
@inject NavigationManager Navigation

<div class="page-container grid-bg">
    <div class="page-header">
        <button class="icon-btn" @onclick="NavigateBack">
            <svg width="24" height="24" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                <path d="M19 12H5m0 0l7 7m-7-7l7-7" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
            </svg>
        </button>
        <h1>@(Id.HasValue ? "Edit Entry" : "New Entry")</h1>
        <div class="header-actions">
            @if (!Id.HasValue || entry.IsDraft)
            {
                <button class="btn btn-secondary" @onclick="() => SaveEntry(true)">Save Draft</button>
            }
            <button class="btn btn-primary" @onclick="() => SaveEntry(false)">Save</button>
        </div>
    </div>

    @if (!string.IsNullOrEmpty(errorMessage))
    {
        <div class="alert alert-danger" style="background-color: #ffebee; color: #c62828; padding: 12px; border-radius: 8px; margin-bottom: 16px;">
            @errorMessage
        </div>
    }

    <div class="entry-form">
        <!-- Date Picker -->
        <div class="form-group">
            <label>Date</label>
            <input type="date" class="form-control" @bind="entry.EntryDate" />
        </div>

        <!-- Mood Selection -->
        <div class="form-group">
            <label>How are you feeling?</label>
            <div class="mood-selector">
                @foreach (var mood in moods)
                {
                    <button class="mood-item @(entry.PrimaryMoodId == mood.Id ? "selected" : "")" 
                            @onclick="() => entry.PrimaryMoodId = mood.Id"
                            title="@mood.Name">
                        <span class="mood-emoji">@mood.Emoji</span>
                        <span class="mood-name">@mood.Name</span>
                    </button>
                }
            </div>
        </div>

        <!-- Title -->
        <div class="form-group">
            <input type="text" class="title-input" placeholder="Title (optional)" @bind="entry.Title" />
        </div>

        <!-- Tags -->
        <div class="form-group">
            <label>Tags</label>
            <TagInput Tags="tagList" TagsChanged="UpdateTags" />
        </div>

        <!-- Content Editor -->
        <div class="editor-container">
            <MarkdownEditor @bind-Value="entry.Content" />
        </div>
    </div>
</div>

@code {
    [Parameter] public int? Id { get; set; }

    private JournalEntry entry = new() { EntryDate = DateTime.Today, PrimaryMoodId = 1 }; // Default to Happy
    private List<Mood> moods = new();
    private List<string> tagList = new();
    private string? errorMessage;

    protected override void OnInitialized()
    {
        moods = JournalService.GetMoods();
        
        if (Id.HasValue)
        {
            var existing = JournalService.GetAllEntries().FirstOrDefault(e => e.Id == Id.Value);
            if (existing != null)
            {
                entry = existing;
                if (!string.IsNullOrEmpty(entry.Tags))
                {
                    tagList = entry.Tags.Split(',', StringSplitOptions.RemoveEmptyEntries).Select(t => t.Trim()).ToList();
                }
            }
        }
    }

    private void UpdateTags(List<string> newTags)
    {
        tagList = newTags;
        entry.Tags = string.Join(",", tagList);
    }

    private void SaveEntry(bool isDraft)
    {
        try
        {
            entry.IsDraft = isDraft;
            JournalService.SaveEntry(entry);
            Navigation.NavigateTo("/dashboard");
        }
        catch (Exception ex)
        {
            errorMessage = $"Error saving entry: {ex.Message}";
        }
    }

    private void NavigateBack()
    {
        Navigation.NavigateTo("/dashboard");
    }
}

