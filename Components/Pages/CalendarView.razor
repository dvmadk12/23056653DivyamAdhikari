@page "/calendar"
@using JUpdate.Models
@using JUpdate.Services
@using System.Globalization
@inject JournalService JournalService
@inject NavigationManager Navigation

<div class="calendar-container">
    <div class="calendar-header">
        <button class="nav-btn" @onclick="PrevMonth">‚Üê Previous</button>
        <h2>@currentDate.ToString("MMMM yyyy")</h2>
        <button class="nav-btn" @onclick="NextMonth">Next ‚Üí</button>
    </div>

    <div class="calendar-grid-wrapper">
        <div class="weekdays-grid">
            @foreach (var day in CultureInfo.CurrentCulture.DateTimeFormat.AbbreviatedDayNames)
            {
                <div class="weekday">@day</div>
            }
        </div>

        <div class="days-grid">
            @foreach (var day in calendarDays)
            {
                <div class="day-cell @(day.IsCurrentMonth ? "" : "other-month") @(day.HasEntry ? "has-entry" : "") @(IsToday(day.Date) ? "today" : "")"
                     @onclick="() => SelectDate(day.Date)"
                     style="@(day.HasEntry ? $"background-color: {GetRandomPastelColor(day.Date.Day)}; color: #333;" : "")">
                    
                    <span class="day-number">@day.Date.Day</span>
                    @if (day.HasEntry)
                    {
                        <span class="entry-emoji">@GetMoodForDay(day.Date)</span>
                    }
                </div>
            }
        </div>
    </div>

    <div class="selected-date-entries">
        <h3>@selectedDate.ToString("D")</h3>
        @if (selectedDayEntry != null)
        {
            <div class="entry-card" @onclick="() => NavigateToEntry(selectedDayEntry.Id)">
                <div class="entry-card-header">
                    <span class="entry-title">@(string.IsNullOrEmpty(selectedDayEntry.Title) ? "Untitled Entry" : selectedDayEntry.Title)</span>
                    @if (selectedDayEntry.IsDraft)
                    {
                        <span class="draft-badge">Draft</span>
                    }
                </div>
                <p class="entry-preview">
                    @GetPreview(selectedDayEntry.Content)
                </p>
                @if (!string.IsNullOrEmpty(selectedDayEntry.Tags))
                {
                    <div class="entry-card-tags">
                        @foreach(var tag in selectedDayEntry.Tags.Split(',').Take(3))
                        {
                            <span class="card-tag">#@tag.Trim()</span>
                        }
                    </div>
                }
            </div>
        }
        else
        {
            <div class="empty-state">
                <p>No entry for this day.</p>
                <button class="btn btn-primary" @onclick="CreateEntryForSelectedDate">Create Entry</button>
            </div>
        }
    </div>
</div>

@code {
    private DateTime currentDate = DateTime.Today;
    private DateTime selectedDate = DateTime.Today;
    private List<CalendarDay> calendarDays = new();
    private List<JournalEntry> monthEntries = new();
    private JournalEntry? selectedDayEntry;

    protected override void OnInitialized()
    {
        LoadMonthData();
        SelectDate(DateTime.Today);
    }

    private void LoadMonthData()
    {
        // Get all entries to map to calendar
        // Optimization: In real app, filter typically by month range in DB query
        // For local SQLite, loading all might be okay for MVP, but better to filter
        var allEntries = JournalService.GetAllEntries(); 
        
        monthEntries = allEntries
            .Where(e => e.EntryDate.Year == currentDate.Year && e.EntryDate.Month == currentDate.Month)
            .ToList();

        GenerateCalendarDays(allEntries);
    }

    private void GenerateCalendarDays(List<JournalEntry> allEntries)
    {
        calendarDays.Clear();
        var firstDayOfMonth = new DateTime(currentDate.Year, currentDate.Month, 1);
        var lastDayOfMonth = firstDayOfMonth.AddMonths(1).AddDays(-1);
        
        // Determine start day (padding from previous month)
        var startDay = firstDayOfMonth.AddDays(-(int)firstDayOfMonth.DayOfWeek);
        var endDay = lastDayOfMonth.AddDays(6 - (int)lastDayOfMonth.DayOfWeek);

        for (var date = startDay; date <= endDay; date = date.AddDays(1))
        {
            calendarDays.Add(new CalendarDay
            {
                Date = date,
                IsCurrentMonth = date.Month == currentDate.Month,
                HasEntry = allEntries.Any(e => e.EntryDate.Date == date.Date)
            });
        }
    }

    private void PrevMonth()
    {
        currentDate = currentDate.AddMonths(-1);
        LoadMonthData();
    }

    private void NextMonth()
    {
        currentDate = currentDate.AddMonths(1);
        LoadMonthData();
    }

    private void SelectDate(DateTime date)
    {
        selectedDate = date;
        selectedDayEntry = JournalService.GetEntryByDate(selectedDate);
    }

    private bool IsToday(DateTime date)
    {
        return date.Date == DateTime.Today;
    }

    private void NavigateToEntry(int id)
    {
        Navigation.NavigateTo($"/entry/{id}");
    }

    private void CreateEntryForSelectedDate()
    {
        // We'd ideally pass the date to NewEntry page
        // For now, let's just go to New Entry, user can change date
        // Or implement query parameter support in NewEntry
        Navigation.NavigateTo("/new-entry");
    }

    private string GetPreview(string content)
    {
        if (string.IsNullOrEmpty(content)) return "";
        var plainText = System.Text.RegularExpressions.Regex.Replace(content, "<.*?>", String.Empty);
        return plainText.Length > 100 ? plainText.Substring(0, 100) + "..." : plainText;
    }

    private string GetRandomPastelColor(int seed)
    {
        var colors = new[] { "#FFB7B2", "#B5EAD7", "#E2F0CB", "#FFDAC1", "#C7CEEA", "#F3E5F5" }; // Muted pastels
        return colors[seed % colors.Length];
    }

    private string GetMoodForDay(DateTime date)
    {
        var entry = monthEntries.FirstOrDefault(e => e.EntryDate.Date == date.Date);
        if (entry == null) return "";
        
        // Return explicit emoji based on mood ID or just a generic one if we don't have the mood map handy
        // In a real app we'd join with Moods table or look up in cached moods list
        // For MVP, if we don't have mood list loaded here, let's just return a generic one or try to load moods
        // But entries already have PrimaryMoodId. Let's assume we have moods loaded or use fallback.
        return "üìù"; 
    }

    class CalendarDay
    {
        public DateTime Date { get; set; }
        public bool IsCurrentMonth { get; set; }
        public bool HasEntry { get; set; }
    }
}

<style>
