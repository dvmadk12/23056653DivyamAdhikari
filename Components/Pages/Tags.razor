@page "/tags"
@using JUpdate.Models
@using JUpdate.Services
@inject JournalService JournalService
@inject NavigationManager Navigation

<div class="tags-page">
    <div class="page-header">
        <h1>Tags</h1>
        <p>Explore your journal entries by tag</p>
    </div>

    <!-- Tag Cloud Section -->
    <div class="tag-cloud-section">
        @if (allTags == null)
        {
            <p>Loading tags...</p>
        }
        else if (!allTags.Any())
        {
            <div class="empty-state">
                <p>No tags created yet. Add tags to your entries to see them here!</p>
            </div>
        }
        else
        {
            <div class="tag-cloud">
                @foreach (var tag in allTags)
                {
                    <button class="tag-chip @(selectedTag == tag ? "active" : "")" 
                            @onclick="() => FilterByTag(tag)">
                        <span class="hashtag">#</span>@tag
                    </button>
                }
                @if (selectedTag != null)
                {
                    <button class="clear-filter" @onclick="ClearFilter">
                        Clear Filter âœ•
                    </button>
                }
            </div>
        }
    </div>

    <!-- Entries List Section -->
    <div class="entries-section">
        <h2 class="section-title">
            @(selectedTag == null ? "Recent Entries" : $"Entries tagged #{selectedTag}")
        </h2>

        @if (filteredEntries == null)
        {
            <p>Loading entries...</p>
        }
        else if (!filteredEntries.Any())
        {
            <div class="empty-entries">
                <p>No entries found.</p>
            </div>
        }
        else
        {
            <div class="entries-list">
                @foreach (var entry in filteredEntries)
                {
                    <div class="entry-card" @onclick="() => NavigateToEntry(entry.Id)">
                        <div class="entry-date">
                            <span class="day">@entry.EntryDate.ToString("dd")</span>
                            <span class="month">@entry.EntryDate.ToString("MMM")</span>
                        </div>
                        <div class="entry-content">
                            <h3 class="entry-title">@(string.IsNullOrEmpty(entry.Title) ? "Untitled Entry" : entry.Title)</h3>
                            <div class="entry-preview">
                                @(entry.Content.Length > 100 ? entry.Content.Substring(0, 100) + "..." : entry.Content)
                            </div>
                            <div class="entry-tags">
                                @if (!string.IsNullOrEmpty(entry.Tags))
                                {
                                    @foreach (var t in entry.Tags.Split(','))
                                    {
                                        <span class="mini-tag">#@t.Trim()</span>
                                    }
                                }
                            </div>
                        </div>
                    </div>
                }
            </div>
        }
    </div>
</div>

@code {
    private List<string> allTags = new();
    private List<JournalEntry> allEntries = new();
    private List<JournalEntry> filteredEntries = new();
    private string? selectedTag;

    protected override void OnInitialized()
    {
        LoadData();
    }

    private void LoadData()
    {
        allTags = JournalService.GetAllTags();
        allEntries = JournalService.GetAllEntries();
        filteredEntries = allEntries;
    }

    private void FilterByTag(string tag)
    {
        if (selectedTag == tag)
        {
            ClearFilter();
            return;
        }

        selectedTag = tag;
        filteredEntries = allEntries
            .Where(e => !string.IsNullOrEmpty(e.Tags) && 
                       e.Tags.Split(',').Select(t => t.Trim()).Contains(tag))
            .ToList();
    }

    private void ClearFilter()
    {
        selectedTag = null;
        filteredEntries = allEntries;
    }

    private void NavigateToEntry(int id)
    {
        Navigation.NavigateTo($"/entry/{id}");
    }
}

