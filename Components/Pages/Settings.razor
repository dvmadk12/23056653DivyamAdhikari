    }

    .setting-info {
        margin-bottom: 12px;
    }

    .setting-label {
        display: block;
        font-weight: 600;
        margin-bottom: 4px;
        color: #ddd;
    }

    .setting-description {
        color: #888;
        font-size: 0.9rem;
    }

    .theme-options {
        display: flex;
        gap: 16px;
    }

    .theme-option {
        background: #1a1a1a;
        border: 2px solid #444;
        border-radius: 8px;
        padding: 8px;
        cursor: pointer;
        display: flex;
        flex-direction: column;
        align-items: center;
        gap: 8px;
        transition: all 0.2s;
    }

    .theme-option.active {
        border-color: var(--accent-purple);
        background: rgba(167, 139, 250, 0.1);
    }
    
