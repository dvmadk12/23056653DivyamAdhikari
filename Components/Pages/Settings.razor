@page "/settings"
@inject JUpdate.Services.ThemeService ThemeService
@inject JUpdate.Services.AuthService AuthService
@inject NavigationManager Navigation
@inject JUpdate.Services.DatabaseService DbService
@inject IJSRuntime JSRuntime

@if (!AuthService.IsAuthenticated)
{
    <RedirectToLogin />
}
else
{
    <div class="settings-container">
        <div class="settings-header">
            <h1 class="page-title">Settings</h1>
            <p class="page-subtitle">Customize your journal experience</p>
        </div>

        <div class="settings-content">
            <div class="settings-section">
                <h2 class="section-title">Appearance</h2>
                <div class="section-content">
                    <div class="setting-item">
                        <div class="setting-info">
                            <label class="setting-label">Theme</label>
                            <p class="setting-description">Choose your preferred color theme</p>
                        </div>
                        <div class="theme-options">
                            <button class="theme-option @(ThemeService.CurrentTheme == "light" ? "active" : "")" 
                                    @onclick='() => ChangeTheme("light")'>
                                <div class="theme-preview light-theme">
                                    <div class="theme-preview-header"></div>
                                    <div class="theme-preview-content"></div>
                                </div>
                                <span>Light</span>
                            </button>
                            <button class="theme-option @(ThemeService.CurrentTheme == "dark" ? "active" : "")" 
                                    @onclick='() => ChangeTheme("dark")'>
                                <div class="theme-preview dark-theme">
                                    <div class="theme-preview-header"></div>
                                    <div class="theme-preview-content"></div>
                                </div>
                                <span>Dark</span>
                            </button>
                        </div>
                    </div>
                </div>
            </div>

            <div class="settings-section">
                <h2 class="section-title">Security</h2>
                <div class="section-content">
                    
                    <!-- Update PIN Section -->
                    <div class="setting-item pin-update-container">
                        <div class="setting-info">
                            <label class="setting-label">Update PIN</label>
                            <p class="setting-description">Change your security PIN.</p>
                        </div>
                        <div class="pin-form">
                            <input type="password" class="form-control" placeholder="Current PIN" @bind="currentPin" />
                            <input type="password" class="form-control" placeholder="New PIN" @bind="newPin" />
                            <input type="password" class="form-control" placeholder="Confirm New PIN" @bind="confirmPin" />
                            <button class="btn-primary update-btn" @onclick="UpdatePin">Update PIN</button>
                        </div>
                        @if (!string.IsNullOrEmpty(pinMessage))
                        {
                            <div class="pin-message @(isPinSuccess ? "success" : "error")">
                                @pinMessage
                            </div>
                        }
                    </div>

                    <div class="setting-item">
                        <div class="setting-info">
                            <label class="setting-label">Reset Application</label>
                            <p class="setting-description">Clear your PIN and restart the setup process. Data will be preserved.</p>
                        </div>
                        <button class="btn-danger" @onclick="ResetApp">Reset App</button>
                    </div>
                </div>
            </div>
        </div>
    </div>
}

@code {


    private string currentPin = "";
    private string newPin = "";
    private string confirmPin = "";
    private string? pinMessage;
    private bool isPinSuccess = false;

    private async Task ChangeTheme(string theme)
    {
        await ThemeService.SetTheme(theme);
    }

    private async Task UpdatePin()
    {
        pinMessage = null;
        isPinSuccess = false;

        if (string.IsNullOrWhiteSpace(currentPin) || string.IsNullOrWhiteSpace(newPin) || string.IsNullOrWhiteSpace(confirmPin))
        {
            pinMessage = "All fields are required.";
            return;
        }

        if (newPin != confirmPin)
        {
            pinMessage = "New PINs do not match.";
            return;
        }

        if (newPin.Length < 4)
        {
            pinMessage = "PIN must be at least 4 digits.";
            return;
        }

        // Verify current PIN
        if (!AuthService.VerifyPin(currentPin))
        {
            pinMessage = "Incorrect current PIN.";
            return;
        }

        // Set new PIN
        try 
        {
            AuthService.SetPin(newPin);
            pinMessage = "PIN updated successfully!";
            isPinSuccess = true;
            currentPin = "";
            newPin = "";
            confirmPin = "";
            await Task.Delay(2000);
            pinMessage = null;
        }
        catch (Exception ex)
        {
            pinMessage = $"Error updating PIN: {ex.Message}";
        }
    }

    private async Task ResetApp()
    {
        try
        {
            bool confirmed = await JSRuntime.InvokeAsync<bool>("confirm", "Are you sure you want to reset the app? This will clear your PIN and Settings, but your Journal Entires will be safe.");
            if (confirmed)
            {
                DbService.ClearUserPin();
                AuthService.SetAuthenticated(false);
                Navigation.NavigateTo("/", forceLoad: true);
            }
        }
        catch (Exception ex)
        {
           await JSRuntime.InvokeVoidAsync("alert", $"An error occurred during reset: {ex.Message}");
        }
    }
}


<style>
