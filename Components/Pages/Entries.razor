@page "/entries"
@using JUpdate.Models
@using JUpdate.Services
@inject JournalService JournalService
@inject NavigationManager Navigation

<div class="entries-page">
    <div class="page-header">
        <div class="header-content">
            <div>
                <h1>All Entries</h1>
                <p>A complete history of your thoughts</p>
            </div>
            <button class="btn-secondary export-btn" @onclick="ExportToPdf">
                <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                    <path d="M21 15v4a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2v-4"></path>
                    <polyline points="7 10 12 15 17 10"></polyline>
                    <line x1="12" y1="15" x2="12" y2="3"></line>
                </svg>
                Export
            </button>
        </div>
    </div>

    <!-- Search Bar -->
    <div class="search-container">
        <div class="search-input-wrapper">
            <svg class="search-icon" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <circle cx="11" cy="11" r="8"></circle>
                <path d="m21 21-4.35-4.35"></path>
            </svg>
            <input 
                type="text" 
                class="search-input" 
                placeholder="Search by title or tags..." 
                value="@searchQuery"
                @oninput="OnSearchInput" />
            @if (!string.IsNullOrWhiteSpace(searchQuery))
            {
                <button class="clear-search-btn" @onclick="ClearSearch">
                    <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                        <line x1="18" y1="6" x2="6" y2="18"></line>
                        <line x1="6" y1="6" x2="18" y2="18"></line>
                    </svg>
                </button>
            }
        </div>
        @if (!string.IsNullOrWhiteSpace(searchQuery))
        {
            <p class="search-results-text">@filteredEntries.Count result(s) found</p>
        }
    </div>

    @if (allEntries == null)
    {
        <p>Loading entries...</p>
    }
    else if (!allEntries.Any())
    {
        <div class="empty-state">
            <svg width="64" height="64" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1" stroke-linecap="round" stroke-linejoin="round">
                <path d="M14 2H6a2 2 0 0 0-2 2v16a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V8z"></path>
                <polyline points="14 2 14 8 20 8"></polyline>
                <line x1="16" y1="13" x2="8" y2="13"></line>
                <line x1="16" y1="17" x2="8" y2="17"></line>
                <polyline points="10 9 9 9 8 9"></polyline>
            </svg>
            <p>No journal entries yet.</p>
            <button class="btn-primary" @onclick="CreateNewEntry">Start Writing</button>
        </div>
    }
    else
    {
        <div class="entries-timeline">
            @foreach (var group in filteredGroupedEntries)
            {
                <div class="month-group">
                    <h2 class="month-header">@group.Key</h2>
                    <div class="entries-list">
                        @foreach (var entry in group.Value)
                        {
                            <div class="entry-card" @onclick="() => NavigateToEntry(entry.Id)">
                                <div class="entry-date-col">
                                    <span class="day-number">@entry.EntryDate.Day</span>
                                    <span class="day-name">@entry.EntryDate.ToString("ddd")</span>
                                </div>
                                <div class="entry-details">
                                    <div class="entry-header-row">
                                        <h3 class="entry-title">@(string.IsNullOrEmpty(entry.Title) ? "Untitled" : entry.Title)</h3>
                                        <span class="entry-mood">
                                            @GetMoodEmoji(entry.PrimaryMoodId)
                                        </span>
                                    </div>
                                    <p class="entry-preview">
                                        @(entry.Content.Length > 120 ? entry.Content.Substring(0, 120) + "..." : entry.Content)
                                    </p>
                                    @if (!string.IsNullOrEmpty(entry.Tags))
                                    {
                                        <div class="entry-tags">
                                            @foreach (var tag in entry.Tags.Split(','))
                                            {
                                                <span class="tag">#@tag.Trim()</span>
                                            }
                                        </div>
                                    }
                                </div>
                            </div>
                        }
                    </div>
                </div>
            }
        </div>
    }
</div>

@code {
    private List<JournalEntry> allEntries = new();
    private List<JournalEntry> filteredEntries = new();
    private Dictionary<string, List<JournalEntry>> groupedEntries = new();
    private Dictionary<string, List<JournalEntry>> filteredGroupedEntries = new();
    private List<Mood> moods = new();
    private string searchQuery = "";

    protected override void OnInitialized()
    {
        LoadData();
    }

    private void LoadData()
    {
        allEntries = JournalService.GetAllEntries() ?? new List<JournalEntry>();
        moods = JournalService.GetMoods();
        filteredEntries = allEntries;

        // Group by Month Year (e.g., "January 2024")
        groupedEntries = allEntries
            .GroupBy(e => e.EntryDate.ToString("MMMM yyyy"))
            .ToDictionary(g => g.Key, g => g.ToList());
        
        filteredGroupedEntries = groupedEntries;
    }

    private void OnSearchInput(ChangeEventArgs e)
    {
        searchQuery = e.Value?.ToString() ?? "";
        FilterEntries();
    }

    private void FilterEntries()
    {
        if (string.IsNullOrWhiteSpace(searchQuery))
        {
            filteredEntries = allEntries;
            filteredGroupedEntries = groupedEntries;
        }
        else
        {
            var query = searchQuery.ToLower();
            filteredEntries = allEntries
                .Where(e => 
                    e.Title.ToLower().Contains(query) || 
                    (e.Tags != null && e.Tags.ToLower().Contains(query)))
                .ToList();
            
            filteredGroupedEntries = filteredEntries
                .GroupBy(e => e.EntryDate.ToString("MMMM yyyy"))
                .ToDictionary(g => g.Key, g => g.ToList());
        }
    }

    private void ClearSearch()
    {
        searchQuery = "";
        FilterEntries();
    }

    private void NavigateToEntry(int id)
    {
        Navigation.NavigateTo($"/entry/{id}");
    }

    private void CreateNewEntry()
    {
        Navigation.NavigateTo("/new-entry");
    }

    private string GetMoodEmoji(int moodId)
    {
        var mood = moods.FirstOrDefault(m => m.Id == moodId);
        return mood?.Emoji ?? "üìù";
    }

    [Inject] private PdfExportService PdfExportService { get; set; } = default!;

    private async Task ExportToPdf()
    {
        if (allEntries == null || !allEntries.Any())
        {
            await App.Current.MainPage.DisplayAlert("No Entries", "There are no entries to export.", "OK");
            return;
        }

        try
        {
            var pdfBytes = PdfExportService.GeneratePdf(allEntries);
            var fileName = $"Journal_Export_{DateTime.Now:yyyyMMdd_HHmm}.pdf";
            var filePath = Path.Combine(FileSystem.CacheDirectory, fileName);

            File.WriteAllBytes(filePath, pdfBytes);

            await Share.Default.RequestAsync(new ShareFileRequest
            {
                Title = "Export Journal",
                File = new ShareFile(filePath)
            });
        }
        catch (Exception ex)
        {
            await App.Current.MainPage.DisplayAlert("Error", $"Failed to export PDF: {ex.Message}", "OK");
        }
    }
}

<style>
